*{
    padding: 0;
    margin: 0;
}
html{
    font-size: 50,5%;
}
body{
    background-color:hsl(229, 67%, 5%) ;
    color: white;
    font-family: sans-serif;
}

.flex{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.flex-wrap{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
}
.header-box{
     padding: 1rem;
}

.center{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/*buttons*/
#btn-login{
    width: 8rem;
    font-size: 1.3rem;
    color: white;
    background: linear-gradient(  black , rgba(36, 34, 34, 0.759)
    );
   border: 1px solid white;
   height: 3.5rem;
   text-transform: uppercase;
   
}
#btn-login:hover{
    background-color: white;
    color: black;
}
.border-raidius{
    border-radius: 0.3rem;
}

#btn-plan{
    background-color: hsl(212, 94%, 31%);
    color: white;
}
.bnt-assine{
    background-color: hsl(262, 100%, 58%);
    border: none ;
    color: white;
    padding: 0.5rem;
    height: 15%;
    width: 70%;
    border-radius: 0.2rem;
    font-size: 1.2rem;
}
.bnt-assine:hover{
    background-color: hsl(262, 79%, 46%);
}

/*header*/
#logo{
    width:  6rem;
    height: 3rem;
    display: none;
}

.background-header{
    background: url(images/background/background-lg.jfif) no-repeat center center/cover;
    height: 100vh;
    width: 100vw;
}


/*area planos*/
.plan-main{
    width: 100vw;
    height: 100vh;
    margin-top: 2rem;
  
}
.plan-main h3{
        text-align: center;
        font-size: 2rem;
        margin-bottom: 2rem;
}
.all-plans{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}
.bck-popular{
   background-image: url(images/combos/colorido.png);
   background-repeat: no-repeat;
   background-position: center;
}
.plan-box{
    width: 33.3%;
    text-align: center;
    height: 20vw;
    margin: 0 0 1rem 0;
    padding: 60px 44px 0;
}
.plan-box h2{
    margin-bottom: 0.8rem;
}
.plan-box p{
    font-size: 1.3rem;
    line-height: 25px;
    color: rgba(255, 255, 255, 0.767);
}
#plan-add{
    text-align: center;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.522);
    margin-top: 4rem;
}
.art-plan{
    margin: 2rem 0 2rem 0;
}


































































@media (max-width: 1024px){
    .background-header{
        background: url(images/background/background-md.jfif) no-repeat top center/cover;        width: 100vw;
        
        
    }
}
